      <HBox BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="50.0" right="50.0" top="50.0" />
         </BorderPane.margin>
         <children>
            <Pane prefHeight="350.0" prefWidth="19.0" HBox.hgrow="ALWAYS" />
            <VBox fx:id="vBox" stylesheets="@css/clickable.css" HBox.hgrow="ALWAYS">
               <children>
                  <CheckBox fx:id="c1" mnemonicParsing="false" text="All questions with blank answerfields with QR code " VBox.vgrow="ALWAYS" />
